{
  "name": "wap3-agent-payment-poc",
  "version": "1.0.0",
  "description": "Web3-based Agent Payment & Escrow PoC - Enabling autonomous AI agent payments with programmable escrow",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "node": "hardhat node",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:localhost": "hardhat run scripts/deploy.ts --network localhost",
    "demo": "hardhat run --no-compile scripts/demo-agent-payment.ts --network localhost",
    "demo:mvp": "./demo/run_mvp_demo.sh",
    "demo:agent": "hardhat run --no-compile demo/agent-service.ts --network localhost",
    "demo:buyer": "hardhat run --no-compile demo/buyer-client.ts --network localhost",
    "demo:buyer-agent": "hardhat run --no-compile demo/buyer-agent-langgraph.ts --network localhost",
    "demo:dual-agent": "./demo/run_dual_agent_demo.sh",
    "example:simple": "hardhat run examples/01-simple-payment.ts --network localhost",
    "example:refund": "hardhat run examples/02-refund-scenario.ts --network localhost",
    "example:multiple": "hardhat run examples/03-multiple-tasks.ts --network localhost",
    "clean": "hardhat clean"
  },
  "keywords": [
    "web3",
    "ai-agents",
    "escrow",
    "smart-contracts",
    "ethereum",
    "payments",
    "blockchain",
    "autonomous-agents"
  ],
  "author": "Nan Jing <nelson.jingusc@gmail.com> (GioroX AI, Inc.)",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@nosana/kit": "^2.0.38"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "hardhat": "^2.27.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
